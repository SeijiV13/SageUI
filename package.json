{
  "name": "sageui",
  "version": "1.0.0",
  "description": "A free and open-source component library for Tailwind CSS with beautiful green-themed components",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "rollup -c --bundleConfigAsCjs",
    "build:watch": "rollup -c --watch --bundleConfigAsCjs",
    "dev": "vite demo --port 3000",
    "preview": "vite preview",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "format": "prettier --write ."
  },
  "keywords": [
    "tailwindcss",
    "css",
    "components",
    "ui",
    "design-system",
    "green",
    "sage",
    "open-source"
  ],
  "author": "SageUI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sageui/sageui.git"
  },
  "bugs": {
    "url": "https://github.com/sageui/sageui/issues"
  },
  "homepage": "https://sageui.dev",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-postcss": "^4.0.0",
    "rollup-plugin-typescript2": "^0.36.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vitepress": "^1.6.4",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.0.0"
  }
}
